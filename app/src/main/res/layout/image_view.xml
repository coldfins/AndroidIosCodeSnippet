<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />



    <ImageView
        android:id="@+id/imageViewCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgIsVideo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:src="@drawable/video_play"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/layoutSelectImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#59000000"
        android:gravity="center"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/imageTrue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imgtrue" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutTrasparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#59FFFFFF"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layoutCamera"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="#7f7f7f"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageCamera"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera_profile" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageCamera"
            android:layout_centerHorizontal="true"
            android:text="camera"
            android:textColor="@android:color/white"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>