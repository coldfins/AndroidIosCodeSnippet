<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.medical.doctfin.UserRegistrationActivity" >

    <android.support.v7.widget.Toolbar
        xmlns:Android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/displayToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:theme="@style/ToolbarColoredBackArrow"
        Android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <!-- <FrameLayout -->
    <!-- android:id="@+id/frame" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" > -->
    <!-- </FrameLayout> -->


    <!-- <com.ved.utils.NonSwipableViewPager -->
    <!-- android:id="@+id/viewPager" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:background="@android:color/white" /> -->

    <ScrollView
        android:id="@+id/registrationScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="15dp" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="20dp" >

                <com.medical.utils.CircleImageView
                    android:id="@+id/userImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/reguserimage" />

                <ImageView
                    android:id="@+id/regadduserphotoimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/regadd" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/firstNameLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/reguser" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="25sp" >

                    <EditText
                        android:id="@+id/firstNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/enterFirstNameString"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" >
                    </EditText>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <View
                android:id="@+id/firstNameView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/lastNameLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/reguser" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="25sp" >

                    <EditText
                        android:id="@+id/lastNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/enterLastNameString"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" >
                    </EditText>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <View
                android:id="@+id/lastNameView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/addressLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/location" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="25sp" >

                    <EditText
                        android:id="@+id/addressEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Address"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <View
                android:id="@+id/addressView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/contactLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/regphone" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="25sp" >

                    <EditText
                        android:id="@+id/mobileEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/contactNoString"
                        android:inputType="number"
                        android:maxLength="12"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" >
                    </EditText>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <View
                android:id="@+id/mobileView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/genderLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/gender_g32" />

                <TextView
                    android:id="@+id/genderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/genderString"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/maleRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="true"
                        android:text="@string/maleString"
                        android:textColor="@color/dark_black"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/femaleRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:buttonTint="@color/colorPrimary"
                        android:text="@string/femaleString"
                        android:textColor="@color/dark_black"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <!-- <View -->
            <!-- android:id="@+id/genderView" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="1dp" -->
            <!-- android:layout_marginTop="10dp" -->
            <!-- android:background="#0094DA" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/userNameLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/reguser" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="25sp" >

                    <EditText
                        android:id="@+id/userNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/enterUserNameString"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" >
                    </EditText>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <View
                android:id="@+id/userNameView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/emailLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/loginregmail" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="25sp" >

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/enterEmailString"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" >
                    </EditText>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <View
                android:id="@+id/emailView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/passwordLogo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/loginregpass" />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="18dp"
                    android:textSize="25sp" >

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/EnterPassword"
                        android:inputType="textPassword"
                        android:paddingLeft="2dp"
                        android:singleLine="true"
                        android:textSize="16sp" >
                    </EditText>
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>
            </LinearLayout>

            <View
                android:id="@+id/passwordView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:background="#bdbdbd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/finishButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="3dp"
                    android:text="@string/signUpString"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/signInTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="ALREADY HAVE AN ACCOUNT?"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/signInsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text=" SIGN IN"
                        android:textColor="@color/dark_black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>